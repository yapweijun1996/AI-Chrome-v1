{
  "manifest_version": 3,
  "name": "AI Side Panel Agent",
  "description": "AI-driven side panel for TODO/task management and controlled browser actions using Gemini.",
  "version": "0.1.0",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "sidePanel",
    "storage",
    "scripting",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "action": {
    "default_title": "AI Side Panel Agent"
  },
  "side_panel": {
    "default_path": "sidepanel/sidepanel.html"
  },
  "options_page": "options/options.html",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "common/messages.js",
        "content/content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "sidepanel/sidepanel.html",
        "sidepanel/sidepanel.css",
        "sidepanel/sidepanel.js",
        "common/*.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}