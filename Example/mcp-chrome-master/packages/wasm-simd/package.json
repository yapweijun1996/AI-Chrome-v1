{
  "name": "@chrome-mcp/wasm-simd",
  "version": "0.1.0",
  "description": "SIMD-optimized WebAssembly math functions for Chrome MCP",
  "main": "pkg/simd_math.js",
  "types": "pkg/simd_math.d.ts",
  "files": [
    "pkg/"
  ],
  "scripts": {
